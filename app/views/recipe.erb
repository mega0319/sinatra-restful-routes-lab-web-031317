<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Recipes</title>
  </head>
  <body>
    <h1>Recipes</h1>
    <% @recipes.each do |recipe| %>
    <%= recipe.name %>
    <%= recipe.ingredients %>
    <%= recipe.cook_time %>
    <a href="/recipes/<%=recipe.id %>">
    <% end %>

  </body>
</html>
